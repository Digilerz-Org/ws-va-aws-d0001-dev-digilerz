##################################################################################
# TERRAFORM CONFIG
##################################################################################
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.0"
    }
  }


  ##################################################################################
  #Terraform Cloud
  ##################################################################################
  backend "remote" {
    organization = local.organization

    workspaces {
      name = local.workspaces
    }
  }
}
